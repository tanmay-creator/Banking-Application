<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <div class="jumbotron bg-dark">
        <div class="container">
        <h1 class="display-4 text-light">BANKING APP</h1>
        <p class="lead text-light"> A Simple Banking Application</p>
        <hr class="my-4">
        <p class="lead">
            <a class="btn btn-primary btn-lg trans" href="/trecord" role="button">Transactions History</a>
        </p>
        </div>
    </div>
    <div class="container">
    
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">A/C No.</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope ="col">Balance in <span>&#8377;</span> </th>
            <th scope ="col">Transfer</th>
        </tr>
        </thead>
        <tbody>
        <%details.forEach((detail,index)=>{%>
            <tr>
                <th scope="row"><%=index+1%></th>
                <td><%=detail.acno%></td>
                <td><%=detail.first%></td>
                <td><%=detail.last%></td>
                <td><span>&#8377;</span> <%=detail.balance%></td>
                <td><a class="btn btn-primary" href="/transaction?accnno=<%=detail.acno%>">Transfer Money</a></td>
            </tr>
        <%})%>
    
        </tbody>
    </table>
    </div>

</html>